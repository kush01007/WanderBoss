<% layout('layouts/boilerplate')%>
<%-include("./includes/flash.ejs")%>
<script id="listing-data" type="application/json">
  <%- JSON.stringify(listing) %>
</script>
<script>
  const mapToken="<%=process.env.MAP_TOKEN%>";
  const listing = JSON.parse(document.getElementById('listing-data').textContent);
</script>

<div class="row">
    <div class="">
        <h3 class="headshow"><%=listing.title%></h3>
    </div>
    <div class="imgggg">
        <div class="card">
            <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_img">
            <div class="card-body">
                <h5 class="card-title">Details:</h5>
                <p class="card-title">Owned by &nbsp;<%=listing.owner.username%></p>
                <p class="card-text"><%=listing.description%> </p>
                <p class="card-text"> &#8377; <%=listing.price.toLocaleString("en-EN") %> </p>
                <p class="card-text"><%=listing.location%></p> 
                <p class="card-text"><%=listing.country%></p>
            </div>
        </div>
    </div>
</div>
<br>
<div class="btnsss">
    <a  href="/listings/<%= listing._id%>/edit"><button class="btn" style="background-color:black; color: white">Edit</button></a>
    
    <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE">
        <button class="btn offset-4 delbtn" style="background-color: red; color: white">DELETE</button>
    </form>
</div>
<br>
<hr>
<div class="review-box">
    <% if(currUser){%>
        <h4 class="mb-4">Leave a Review</h4>
        <form action="/listings/<%=listing.id%>/reviews" method="POST" novalidate class="needs-validation" >
            <label class="form-label" for="rating">Rating</label>
            <fieldset class="starability-slot">
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
            <div class="comments">
                <label class="form-label" for="comment">Comments</label>
                <textarea required name="review[comment]" id="comment" cols="85" rows="5" class="form-control"></textarea>
                <div class="invalid-feedback">
                    Please add some comment for review
                </div>
            </div>
            <br>
            <button class="btn btn-dark">Submit</button>
            <hr>
        </form>
    <%}%>
    <% if(listing.reviews.length >0){ %> 
        <div class="all-review">
            <h5 style="margin-top: 5px;">All Reviews</h5>
    <%}%>
            <div class="row justify-content-center">
                <%for(review of listing.reviews){%>
                    <div class=" col-md-5  mt-4 " style="min-width:360px">
                        <div class="card show-reviews ms-2">
                            <div class="card-body">
                                <h6 class="card-title">@<%=review.author.username%></h6>
                                <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
                                <p class="card-text"><%=review.comment%></p>
                            </div>
                            <form class="mb-3 ms-2" method="POST" action="/listings/<%=listing.id%>/reviews/<%=review._id%>?_method=DELETE">
                                <button class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                    <%}%>
            </div>
        </div>
    
    <div class="location">
        <h3>Where you'll be</h3>
        <div id="map"></div>
    </div>
</div> 

<script src="/js/map.js"></script>
