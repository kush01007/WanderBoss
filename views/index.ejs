<% layout('layouts/boilerplate') %>

<div id="filters">
  <div class="filter">
    <div class="container d-flex  ">
      <div class="d-flex overflow-auto gap-4 align-items-center" style="white-space:nowrap;">
        <div class="category">
          <i class="bi bi-fire" ></i>
          <p>Trending</p>
        </div>
        <div class="category">
          <i class="fa-solid fa-bed"></i>
          <p>Rooms</p>
        </div>
        <div class="category">
          <i class="fa-solid fa-mountain-city"></i>
          <p>Iconic cities</p>
        </div>
        <div class="category">
          <i class="fa-solid fa-mountain"></i>
          <p>Mountains</p>
        </div>
        <div class="category">
          <i class="fa-brands fa-fort-awesome"></i>
          <p>Castles</p>     
        </div>
        <div class="category">
          <i class="fa-solid fa-person-swimming"></i>
          <p>Amazing Pools</p>
        </div>
        <div class="category">
          <i class="fa-solid fa-campground"></i>
          <p>Camping</p> 
        </div>
        <div class="category">
          <i class="fa-solid fa-cow"></i>
          <p>Farms</p>
        </div>
        <div class="category">
          <i class="fa-solid fa-snowflake"></i>
          <p>Arctic</p>
        </div>
        <div class="category">
          <i class="fa-solid fa-igloo"></i>
          <p>Domes</p>
        </div>
        <div class="category">
          <i class="fa-solid fa-sailboat"></i>
          <p>Boats</p>
        </div>   
      </div>   
      <div class="tax-toggle ms-auto flex-shrink-0  ">
          <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display after taxes</label>
          </div>
      </div>
    </div>
  </div> 
</div>

<%-include("./includes/flash.ejs")%>

<div class="row">
  <%for(let listing of allListings){%>
  <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-4 mb-1 d-flex justify-content-center">
    <a class="link " href="/listings/<%=listing._id%>" style="width: 450px;">
    <div class="card card-img "style="">
      
        <img src="<%=listing.image.url%>" class="card-img-top mx-auto d-block" alt="listing-img">
      
      <div class="card-body">
        <p class="card-title"><%=listing.title%>
          <br>
          <div class="day">&#8377; <%= listing.price ? listing.price.toLocaleString("en-EN") : "" %>/night <i class="tax-info">&nbsp;&nbsp; +18% GST</i> </div>
        </p>
      </div>
    </div>
    </a>
  </div>
  <%}%>
</div>

<script>
  let taxswitch=document.getElementById("switchCheckDefault");
  taxswitch.addEventListener("click",()=>{
    let taxInfo=document.getElementsByClassName("tax-info");
    for(info of taxInfo) {
      if(info.style.display!="inline"){
      info.style.display="inline";
      }else{
        info.style.display="none";
      }
    }
  })
</script>


